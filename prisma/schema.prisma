// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

// Add this datasource block
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
}